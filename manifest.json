{
	"manifest_version": 2,
	"name": "Cookie Ripper",
	"description": "Allows you to set cookie preferences on a global, per domain and per cookie level. Also supports web storage.",
	"version": "0.1",
	"author": "Sesu8642",
	"homepage_url": "https://github.com/Sesu8642/CookieRipper",
	"developer": {
  	"name": "Sesu8642",
  	"url": "https://github.com/Sesu8642"
	},
	"browser_action": {
		"browser_style": false,
		"default_icon": "icons/cookieRipper.svg",
		"default_popup": "popup.html",
		"default_title": "Cookie Ripper is active!",
		"default_area": "navbar"
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false,
		"browser_style": false
	},
	"applications": {
	  "gecko": {
			"id": "cookieRipper@sesu8642.de",
	    "strict_min_version": "62.0"
	  }
	},
	"minimum_chrome_version": "70.0",
	"permissions": [
		"cookies",
		"storage",
		"unlimitedStorage",
		"tabs",
		"webNavigation",
		"<all_urls>"
	],
	"background": {
		"scripts": [
			"lib/browser-polyfill.min.js",
			"js/common.js",
			"js/bgPage.js"
		],
		"persistent": true
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"all_frames": true,
		"run_at": "document_start",
		"js": [
			"lib/browser-polyfill.min.js",
			"js/inject.js"
		]
	}],
	"icons": {
		"16": "icons/cookieRipper_16.png",
		"32": "icons/cookieRipper_32.png",
		"48": "icons/cookieRipper_48.png",
		"96": "icons/cookieRipper_96.png",
		"128": "icons/cookieRipper_128.png"
	}
}
